{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "preLaunchTask": "./node_modules/typescript/bin/tsc",
            "outFiles": [
                "${workspaceRoot}/out/src"
            ]
        }
    ]
}